            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Название_альбома)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Жанр)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Общая_длина)
            </td>
