                @Html.DisplayFor(modelItem => item.EP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Исполнитель.ФИО)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Номер_альбома }) |
