

@{
    ViewBag.Title = "Логин";
}

<h2>Войдите в аккаунт</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Логин", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Pasport")
                @Html.ValidationSummary()
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Пароль", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("Password")
                @Html.ValidationSummary()
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Войти" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@Html.ActionLink("Продолжить без входа", "WithoutAuth")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}